# D1 Sync Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Required: Cloudflare Credentials
# =============================================================================

# API Token with D1 permissions
# Get from: https://dash.cloudflare.com/profile/api-tokens
# Required permissions: Account:Cloudflare Workers:Edit, Account:D1:Edit
D1_SYNC_CLOUDFLARE_API_TOKEN=your-api-token-here

# Your Cloudflare Account ID
# Found at: https://dash.cloudflare.com → any zone → Overview → right sidebar
D1_SYNC_CLOUDFLARE_ACCOUNT_ID=your-account-id-here

# =============================================================================
# Required: D1 Database
# =============================================================================

# D1 Database Name
D1_SYNC_DATABASE_NAME=my-database

# D1 Database ID (UUID)
D1_SYNC_DATABASE_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# =============================================================================
# Optional: Account Tier
# =============================================================================

# Account tier: "free" or "paid" (affects limits)
D1_SYNC_TIER=free

# =============================================================================
# Optional: Sync Behavior
# =============================================================================

# Preview mode (true/false)
# D1_SYNC_SYNC__DRY_RUN=false

# Overwrite existing rows (true/false)
# D1_SYNC_SYNC__OVERWRITE=false

# Resume from checkpoint (true/false)
# D1_SYNC_SYNC__RESUME=true

# =============================================================================
# Optional: Logging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
D1_SYNC_LOGGING__LEVEL=INFO

# Log format: rich, json, simple
D1_SYNC_LOGGING__FORMAT=rich
